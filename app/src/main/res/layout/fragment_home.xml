<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:background="@color/HoMiLightGreen"
    >

    <TextView
        android:id="@+id/animalRowIdHeader"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/animalRowEarNumberHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="@string/StringId"
        android:background="@color/HoMiLightGreenHighlight"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/animalRowEarNumberHeader"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="@string/StringEarMarkNumber"
        android:background="@color/HoMiOrangeStrong"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/animalStableNumberHeader"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="@string/StringStableNumber"
        android:background="@color/HoMiLightGreenHighlight"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <ListView
        android:id="@+id/homeList"
        android:layout_width="match_parent"
        android:layout_height="577dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:padding="0dp"
        android:divider="@color/HoMiDarkGreenDeep"/>
</androidx.constraintlayout.widget.ConstraintLayout>